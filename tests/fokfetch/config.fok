{
  enable = true;
  backend = "ascii";
  display = [
    "$2/================<$3{username}$1@$3{hostname}$2>================/"
    "$4OS:$3 {os}"
    "$4Kernel:$3 {kernel}"
    "$4CPU:$3 {cpu}"
    "$4Uptime:$3 {uptime}"
    "$2/================<{blank-username} {blank-hostname}>================/"
  ];
  colors = {
    C1 = "\x1b[38;5;15m";
    C2 = "\x1b[38;5;161m";
    C3 = "\x1b[0m";
    C4 = "\x1b[38;5;240m";
  };
}
